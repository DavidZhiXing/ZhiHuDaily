<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:divider">@color/style_divider</item>

    </style>

    <style name="DayTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/style_day_window_background</item>
        <item name="android:textColorSecondary">@color/style_day_text_color_secondary</item>
        <item name="colorPrimary">@color/style_day_color_primary</item>
        <item name="colorAccent">@color/style_day_color_accent</item>
        <item name="android:textColorPrimary">@color/style_day_text_color_primary</item>
        <item name="colorPrimaryDark">@color/style_day_color_primary_dark</item>

    </style>
    <style name="NightTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/style_night_window_background</item>
        <item name="android:textColorSecondary">@color/style_night_text_color_secondary</item>
        <item name="colorPrimary">@color/style_night_color_primary</item>
        <item name="colorAccent">@color/style_night_color_accent</item>
        <item name="android:textColorPrimary">@color/style_night_text_color_primary</item>
        <item name="colorPrimaryDark">@color/style_night_color_primary_dark</item>

    </style>
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="LayoutWithPadding">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>
    <style name="TextViewBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="TextViewBase.title">
        <item name="android:textColor">@color/setting_color_accent</item>
        <item name="android:textSize">12dp</item>
    </style>
    
    <style name="TextViewBase.Main">
        <item name="android:textColor">@color/setting_text_color_primary</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="TextViewBase.Info">
        <item name="android:textColor">@color/setting_text_color_secondary</item>
        <item name="android:textSize">14dp</item>
    </style>


    <style name="divider">
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/style_divider</item>
    </style>

</resources>
