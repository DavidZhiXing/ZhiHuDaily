<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:padding="16dp">

    <ImageView
        android:id="@+id/avatarView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_name"
                style="@style/TextViewBase.Main"
                android:layout_width="0dp"
                android:layout_weight="1"
                tools:text="修维康"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/comment_vote"
                />

            <TextView
                android:id="@+id/txt_vote_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                tools:text="123"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_content"
            style="@style/TextViewBase.Info"
            android:layout_marginTop="16dp"
            android:lineSpacingExtra="4dp"
            tools:text="我很可爱我很可爱我很可爱我很可爱我很可爱我很可爱我很可爱我很可爱我很可爱我很可爱"/>

        <TextView
            android:id="@+id/txt_reply"
            style="@style/TextViewBase.Info"
            android:layout_marginTop="4dp"
            android:lineSpacingExtra="4dp"
            tools:text="哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/style_hint"
                android:textSize="12dp"
                tools:text="05-26 23:00"
                />

            <TextView
                android:id="@+id/txt_fold"
                style="@style/TextViewBase.Info"
                android:background="#ceddf2"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="展开"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>